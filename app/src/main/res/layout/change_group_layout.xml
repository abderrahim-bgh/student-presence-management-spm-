<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/previouse_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp"
                    />

                <TextView
                    android:id="@+id/attendance_student_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginTop="15dp"
                    android:text="change Group Group"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:textSize="22sp" />
                <ImageView
                    android:id="@+id/close_dialog_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_close_24"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/yearsLayout_changeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="choose year :"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/years_recyclerView_change"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="true"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/year_card_changeGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="4dp"
                app:cardElevation="8dp"

                >
                <TextView
                    android:id="@+id/year_text_changeGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="2020/2021"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/classes_layout_changeGroup"
                >


                <TextView
                    android:id="@+id/class_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="choose class:"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/classes_recyclerView_change"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="true"
                    android:layout_marginTop="5dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/classes_card_changeGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginStart="25dp"
                android:layout_marginVertical="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="4dp"
                app:cardElevation="8dp"

                >
                <TextView
                    android:id="@+id/class_text_changeGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="2020/2021"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/groups_layout_changeGroup"
                >
                <TextView
                    android:id="@+id/group_TD_Choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TD Groups :"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/groups_td_recyclerView_change"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="true"
                    android:layout_marginTop="5dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />


            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>