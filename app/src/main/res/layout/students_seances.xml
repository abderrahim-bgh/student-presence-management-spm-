<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#EAEAEA"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
        >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"

                        android:src="@drawable/t_start"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"/>


                    <TextView
                        android:id="@+id/Start_Hour_Seance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="17dp"
                        android:text="19:59"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/t_end"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:id="@+id/End_Hour_Seance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:textSize="17dp"
                        android:text="24:24"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/Name_of_seance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text=" name_seance"
                android:gravity="center_horizontal|center_vertical"
                />
            <TextView
                android:id="@+id/State_of_Presence"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text=" Justified"
                android:textStyle="bold"
                android:gravity="center_horizontal|center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/date_of_seance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="20 december 2021"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/update_state_of_seance"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/edite_state"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/Justify_seance"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/justifier"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/Comment_on_student"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/comment_24"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"/>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>







</androidx.cardview.widget.CardView>